<a href="/html/suggest" class="link">&larr; Retour aux suggestions</a>

<div class="card mt-6">
  <h2 class="text-2xl font-bold text-yellow-600 mb-4">Modifier la suggestion</h2>

  <div class="flex gap-6 items-start">
    <img src="/images/<%= product.image %>" class="h-32 rounded shadow">

    <div class="flex-1">
      <p class="text-sm mb-2"><strong>Produit :</strong> <%= product.title %></p>
      <textarea id="comment" class="w-full p-2 border rounded" rows="4"><%= suggestion.comment %></textarea>
      <button id="saveBtn" class="btn mt-4">Enregistrer</button>
    </div>
  </div>
</div>

<script>
  document.getElementById("saveBtn").addEventListener("click", () => {
    const comment = document.getElementById("comment").value;
    fetch("/suggest/<%= suggestion.id %>", {
      method: "PATCH",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ comment })
    }).then(res => {
      if (res.ok) {
        window.location.href = "/html/suggest";
      } else {
        alert("Erreur lors de la modification");
      }
    });
  });
</script>
